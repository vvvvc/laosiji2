<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginTop="5dp"
           android:id="@+id/bt_back_main"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:background="@mipmap/back_btn"
            />

        <TextView
            android:id="@+id/bt_register"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:textSize="23sp"
            android:textColor="#90ff0000"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请先去注册,如果注册，请登录"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50ff0000"
        />

    <EditText
        android:id="@+id/login_num"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="用户名/邮箱/手机号"
        />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/login_pwd"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="密码"
        />

    <Button
        android:id="@+id/bt_login"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:background="#50ff0000"
        android:text="登陆"
        />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="一键登录"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="135dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo_qq"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo_shortmessage"/>
    </LinearLayout>




</LinearLayout>
