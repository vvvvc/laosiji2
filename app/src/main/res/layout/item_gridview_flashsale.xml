<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<LinearLayout
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/limitbuy_iv"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_width="200dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/limitbuy_tv_desc"
        android:layout_width="wrap_content"
        android:text="韩版潮款斜挎简约单肩包"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/limitbuy_tv_price1"
            android:layout_width="0dp"
            android:text="$ 18.90"
            android:textSize="12sp"
            android:textColor="#f00"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/limitbuy_tv_price2"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:text="$ 18.90"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/btn_limitbuy"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/limitbuy_tv_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:text="仅剩43件"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/limitbuy_buynow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:text="立马抢"
            android:textSize="13sp"
            android:textColor="#fff"
            android:layout_height="20dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>