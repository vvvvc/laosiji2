<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="添加收货地址"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/address_area"
        android:text="上海市 浦东新区 航头镇"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:background="#fff"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/address_street"
        android:hint="请输入街区地址"
        style="@style/addaddressitemstyle"/>

    <EditText
        android:id="@+id/address_district_num"
        android:hint="请输入区号"
        style="@style/addaddressitemstyle"/>

    <EditText
        android:id="@+id/address_name"
        android:hint="请输入您的收货人姓名"
        style="@style/addaddressitemstyle"/>

    <EditText
        android:id="@+id/address_telnum"
        android:hint="请输入您的收货人联系方式"
        style="@style/addaddressitemstyle"/>

    <CheckBox
        android:layout_margin="10dp"
        android:text="是否设置成默认地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/address_commit"
        android:layout_marginTop="40dp"
        android:text="提交地址信息"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@mipmap/regist_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


</LinearLayout>
