<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="品牌推荐"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_shopcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="购物车"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="孕妈专区"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_yunma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="营养食品"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_yinyang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="宝宝用品"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_baby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="儿童服饰"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="时尚女装"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_fashion"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="成人用品"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="日常用品"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_dayly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="化妆品"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_huazhuang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#DBDBDB"
                android:padding="5dp"
                android:text="清洁用具"
                android:textSize="18sp" />

            <GridView
                android:id="@+id/gv_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="5dp"></GridView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>